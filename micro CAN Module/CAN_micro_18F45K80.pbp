Check_1wireSensor:
  if Sensor2_found=1 or Sensor3_found=1 then
    'if SensorCounter>5000 and ReadRom=0 then
    '  ReadRom=1
    '  hserout2 ["1Wire Read ROM",13,10]
    '  gosub Onewire_read_rom
    '  gosub Onewire_read_rom2
    'endif  
