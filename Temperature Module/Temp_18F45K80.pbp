    IF I2C_STATE= I2C_STATE_IDLE then
      I2C_STATE = I2C_STATE_SET_LED  
      Led_Refresh=1
    endif
  endif  
return

Measure_Humidity:    'this subroutine must be used to (re)start humidity measurement
  if PowerState=1 then
    IF I2C_STATE= I2C_STATE_IDLE then
      I2C_STATE = I2C_STATE_GET_HUM  
